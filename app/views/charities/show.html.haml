%h1
  = @charity.name
%p
  EIN:
  = @charity.ein
%p 
  Contact: 
  = @charity.contact_person
%p 
  Email: 
  = @charity.email
%p 
  Phone: 
  = @charity.phone  
%p 
  Address:
  = "<br>#{@charity.address_line_1}".html_safe unless @charity.address_line_1.blank?
  = "<br>#{@charity.address_line_2}".html_safe unless @charity.address_line_2.blank?
  - unless @charity.city.blank? || @charity.state.blank? || @charity.zip_code.blank?
    = "<br>#{@charity.city}, #{@charity.state} #{@charity.zip_code}".html_safe

%p
  %b Mission:
  = @charity.mission
