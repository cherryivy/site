= simple_form_for @event, html: { class: 'form-horizontal'} do |f|
  = f.input         :title
  = f.input         :start_time    
  = f.input         :end_time
  .field
    = f.label       :cover_image
    = f.file_field  :cover_image  
  = f.input         :description, input_html: {rows: 10, cols: 60}
  = f.button        :submit
